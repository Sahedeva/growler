<div class="row">
	<div class="col-xs-9">
	<h3 id="roar_head">Your Total Number of Growls is <%= session[:roars].length  %> <br> </h3>
	</div>
	<div class="col-xs-2">
		<img id="view_img" src="images/roars_img.jpg">
		<audio autoplay>
			<source src="sounds/Tiger Growling-SoundBible.com-258880045.mp3" type="audio/mpeg">
		</audio>
	</div>
</div>
<div class="row">
	<div class="col-xs-11 col-xs-offset-1">
		<ul id="roars_list">
			<%  for i in 0..@array_length %>
			<% j=i+1 %>
			<li>(<%= j %>) <%= @times[i] %></li>
			<li><span style='word-wrap:break-word'><%= @roars[i] %></span> <br></li>
			<% end %>
		</ul>
	</div>
</div>